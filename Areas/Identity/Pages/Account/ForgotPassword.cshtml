@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="d-flex justify-content-center pt-5">
    <form method="post" class="bg-white p-4 rounded shadow-sm" style="width: 360px;">
        <h1 class="h5 mb-4 text-center">@ViewData["Title"]</h1>

        <div class="mb-3">
            <label asp-for="Input.Email" class="form-label">Email address</label>
            <input asp-for="Input.Email"
                   class="form-control"
                   autocomplete="username"
                   placeholder="name@example.com" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-blue-var-1 w-100 mb-3">Reset password</button>

        <div class="d-flex justify-content-between small">
            <a asp-page="./Login">Back to sign in</a>
            <a asp-page="./Register">Register</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
