@page
@model LoginModel

@{
    ViewData["Title"] = "Sign in to VAM";
}

<div class="d-flex justify-content-center pt-5">
    <form method="post" class="bg-white p-4 rounded shadow-sm" style="width: 360px;">
        <h1 class="h5 mb-4 text-center">@ViewData["Title"]</h1>

        <div class="mb-3">
            <label asp-for="Input.Email" class="form-label">Username or email address</label>
            <input asp-for="Input.Email"
                   class="form-control"
                   autocomplete="username" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.Password" class="form-label">Password</label>
            <input asp-for="Input.Password"
                   type="password"
                   class="form-control"
                   autocomplete="current-password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="mb-3 form-check">
            <input asp-for="Input.RememberMe" class="form-check-input" id="rememberMe" />
            <label asp-for="Input.RememberMe" class="form-check-label">Remember me</label>
        </div>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="text-danger mb-3" style="text-decoration: underline;">
                @Html.ValidationSummary(false, "", new { @class = "mb-0" })
            </div>
        }

        <button type="submit" class="btn btn-blue-var-1 w-100 mb-3">Sign in</button>

        <div class="d-flex justify-content-between small">
            <a asp-page="./ForgotPassword">Forgot password?</a>
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}