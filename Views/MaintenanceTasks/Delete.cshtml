@model VirtualAquariumManager.Models.MaintenanceTask

@{
    ViewData["Title"] = "Delete";
}

<div class="form-container">
    <div class="card-header">
        <h2>Delete Maintenance Task</h2>
    </div>

    <form asp-action="Delete" class="form-grid">
        <input type="hidden" asp-for="Id" />

        <div class="form-field">
            <label asp-for="Type" class="control-label"></label>
            <input asp-for="Type" readonly class="form-control" />
        </div>

        <div class="form-field">
            <label asp-for="PerformedOn" class="control-label"></label>
            <input asp-for="PerformedOn" readonly class="form-control" />
        </div>

        <div class="form-field">
            <label asp-for="DueDate" class="control-label"></label>
            <input asp-for="DueDate" readonly class="form-control" />
        </div>

        <div class="form-actions grid-full">
            <button type="submit" class="btn btn-red">Delete</button>
            <a asp-action="Index" asp-route-TankId="@Model.TankId" class="btn btn-blue">Cancel</a>
        </div>
    </form>
</div>