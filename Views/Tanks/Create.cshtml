@model VirtualAquariumManager.Models.Tank

@{
    ViewData["Title"] = "Create a Tank";
}

<div class="form-container">
    <div class="card-header">
        <h2>Create Tank</h2>
    </div>

    <form asp-action="Create" class="form-grid">
        <div asp-validation-summary="ModelOnly" class="text-danger grid-full"></div>

        <!-- Tank fields -->
        <div class="form-field">
            <label asp-for="Shape"></label>
            <input asp-for="Shape" class="form-control" placeholder="e.g. Round, Hexagonal" />
            <span asp-validation-for="Shape" class="text-danger"></span>
        </div>

        <div class="form-field">
            <label asp-for="Size">Size (Liters)</label>
            <input asp-for="Size" type="number" step="any" class="form-control" placeholder="e.g. 75" />
            <span asp-validation-for="Size" class="text-danger"></span>
        </div>

        <!-- WaterQuality fields -->
        <h4 class="grid-full">Initial Water Quality</h4>

        <div class="form-field">
            <label asp-for="WaterQuality.PhLevel"></label>
            <input asp-for="WaterQuality.PhLevel" type="number" step="any" class="form-control" placeholder="e.g. 7" />
            <span asp-validation-for="WaterQuality.PhLevel" class="text-danger"></span>
        </div>

        <div class="form-field">
            <label asp-for="WaterQuality.Temperature"></label>
            <input asp-for="WaterQuality.Temperature" type="number" step="any" class="form-control" placeholder="°C" />
            <span asp-validation-for="WaterQuality.Temperature" class="text-danger"></span>
        </div>

        <div class="form-field">
            <label asp-for="WaterQuality.AmmoniaLevel"></label>
            <input asp-for="WaterQuality.AmmoniaLevel" type="number" step="any" class="form-control" placeholder="ppm" />
            <span asp-validation-for="WaterQuality.AmmoniaLevel" class="text-danger"></span>
        </div>

        <div class="form-field">
            <label asp-for="WaterQuality.WaterType"></label>
            <input asp-for="WaterQuality.WaterType" class="form-control" placeholder="Freshwater / Saltwater" />
            <span asp-validation-for="WaterQuality.WaterType" class="text-danger"></span>
        </div>

        <!-- Create or Cancel -->
        <div class="form-actions grid-full">
            <button type="submit" class="btn btn-blue">Create</button>
            <a asp-action="Index" class="btn btn-red">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}