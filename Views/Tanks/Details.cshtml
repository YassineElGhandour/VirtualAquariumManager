@model VirtualAquariumManager.Models.Tank

@{
    ViewData["Title"] = "Details";
}

<div class="form-container">
    <div class="card-header">
        <h2>Tank and water quality details</h2>
    </div>

    <div class="form-grid-3">
        <dl>
            <dt>@Html.DisplayNameFor(m => m.Shape)</dt>
            <dd>@Html.DisplayFor(m => m.Shape)</dd>
        </dl>
        <dl>
            <dt>@Html.DisplayNameFor(m => m.Size)</dt>
            <dd>@Html.DisplayFor(m => m.Size)</dd>
        </dl>
        <dl>
            <dt>@Html.DisplayNameFor(m => m.WaterQuality.PhLevel)</dt>
            <dd>@Html.DisplayFor(m => m.WaterQuality.PhLevel)</dd>
        </dl>
        <dl>
            <dt>@Html.DisplayNameFor(m => m.WaterQuality.Temperature)</dt>
            <dd>@Html.DisplayFor(m => m.WaterQuality.Temperature)</dd>
        </dl>
        <dl>
            <dt>@Html.DisplayNameFor(m => m.WaterQuality.AmmoniaLevel)</dt>
            <dd>@Html.DisplayFor(m => m.WaterQuality.AmmoniaLevel)</dd>
        </dl>
        <dl>
            <dt>@Html.DisplayNameFor(m => m.WaterQuality.WaterType)</dt>
            <dd>@Html.DisplayFor(m => m.WaterQuality.WaterType)</dd>
        </dl>

        <!-- actions span all three columns -->
        <div class="form-actions grid-full">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-blue">Edit</a>
            <a asp-action="Index" class="btn btn-red">Cancel</a>
        </div>
    </div>
</div>
