@model VirtualAquariumManager.ViewModels.TankWaterQualityData

@{
    ViewData["Title"] = "Details";
}

<div class="form-container">
    <div class="card-header">
        <h2>Tank and water quality details</h2>
    </div>

    <div class="form-grid-3">
        <dl>
            <dt>@Html.DisplayNameFor(twq => twq.Shape)</dt>
            <dd>@Html.DisplayFor(twq => twq.Shape)</dd>
        </dl>
        <dl>
            <dt>@Html.DisplayNameFor(twq => twq.Size)</dt>
            <dd>@Html.DisplayFor(twq => twq.Size)</dd>
        </dl>
        <dl>
            <dt>@Html.DisplayNameFor(twq => twq.PhLevel)</dt>
            <dd>@Html.DisplayFor(twq => twq.PhLevel)</dd>
        </dl>
        <dl>
            <dt>@Html.DisplayNameFor(twq => twq.Temperature)</dt>
            <dd>@Html.DisplayFor(twq => twq.Temperature)</dd>
        </dl>
        <dl>
            <dt>@Html.DisplayNameFor(twq => twq.AmmoniaLevel)</dt>
            <dd>@Html.DisplayFor(twq => twq.AmmoniaLevel)</dd>
        </dl>
        <dl>
            <dt>@Html.DisplayNameFor(twq => twq.WaterType)</dt>
            <dd>@Html.DisplayFor(twq => twq.WaterType)</dd>
        </dl>

        <!-- actions span all three columns -->
        <div class="form-actions grid-full">
            <a asp-action="Edit" asp-route-id="@Model?.TankId" class="btn btn-blue">Edit</a>
            <a asp-action="Index" class="btn btn-red">Cancel</a>
        </div>
    </div>
</div>
