@model VirtualAquariumManager.Models.Tank

@{
    ViewData["Title"] = "Edit";
}

<div class="form-container">
    <div class="card-header">
        <h2>Edit Tank</h2>
    </div>

    <form asp-action="Edit" class="form-grid">
        <div asp-validation-summary="ModelOnly" class="text-danger grid-full"></div>

        <input type="hidden" asp-for="Id" />

        <!-- Tank fields -->
        <div class="form-field">
            <label asp-for="Shape" class="control-label"></label>
            <input asp-for="Shape" class="form-control" />
            <span asp-validation-for="Shape" class="text-danger"></span>
        </div>

        <div class="form-field">
            <label asp-for="Size" class="control-label"></label>
            <input asp-for="Size" type="number" step="any" class="form-control" />
            <span asp-validation-for="Size" class="text-danger"></span>
        </div>

        <!-- WaterQuality fields -->
        <h4 class="grid-full">Initial Water Quality</h4>

        <input type="hidden" asp-for="WaterQuality.Id" />
        <div class="form-field">
            <label asp-for="WaterQuality.PhLevel"></label>
            <input asp-for="WaterQuality.PhLevel" type="number" step="any" class="form-control" />
            <span asp-validation-for="WaterQuality.PhLevel" class="text-danger"></span>
        </div>

        <div class="form-field">
            <label asp-for="WaterQuality.Temperature"></label>
            <input asp-for="WaterQuality.Temperature" type="text" class="form-control" />
            <span asp-validation-for="WaterQuality.Temperature" class="text-danger"></span>
        </div>

        <div class="form-field">
            <label asp-for="WaterQuality.AmmoniaLevel"></label>
            <input asp-for="WaterQuality.AmmoniaLevel" type="text" class="form-control" />
            <span asp-validation-for="WaterQuality.AmmoniaLevel" class="text-danger"></span>
        </div>

        <div class="form-field">
            <label asp-for="WaterQuality.WaterType"></label>
            <input asp-for="WaterQuality.WaterType" type="text" class="form-control" />
            <span asp-validation-for="WaterQuality.WaterType" class="text-danger"></span>
        </div>

        <!-- Edit or Cancel -->
        <div class="form-actions grid-full">
            <button type="submit" value="Edit" class="btn btn-blue">Edit</button>
            <a asp-action="Index" class="btn btn-red">Cancel</a>
        </div>

    </form>
</div>