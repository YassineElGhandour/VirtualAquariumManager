@model VirtualAquariumManager.Models.Tank

@{
    ViewData["Title"] = "Delete";
}

<div class="form-container">
    <div class="card-header">
        <h2>Delete Tank</h2>
    </div>

    <form asp-action="Delete" class="form-grid">
        <input type="hidden" asp-for="Id" />

        <div class="form-field">
            <label asp-for="Shape" class="control-label"></label>
            <input asp-for="Shape" readonly class="form-control" />
        </div>

        <div class="form-field">
            <label asp-for="Size" class="control-label"></label>
            <input asp-for="Size" readonly class="form-control" />
        </div>

        <div class="form-actions grid-full">
            <button type="submit" class="btn btn-red">Delete</button>
            <a asp-action="Index" class="btn btn-blue">Cancel</a>
        </div>
    </form>
</div>