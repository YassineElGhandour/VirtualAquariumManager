@model IEnumerable<VirtualAquariumManager.Models.Fish>

@{
    ViewData["Title"] = "Fish";
    var pageIndex = (int)(ViewBag.PageIndex ?? 1);
    var pageSize = (int)(ViewBag.PageSize ?? 10);
    var totalCount = (int)(ViewBag.TotalCount ?? 0);
    var totalPages = (int)Math.Ceiling((double)totalCount / pageSize);
    var CurrentSearchString = (string)(ViewBag.CurrentSearchString);
    var counter = (pageIndex - 1) * pageSize;
    var TankId = (Guid?)ViewBag.TankId;
}

<div class="view-wrapper mx-4">
    <div class="table-container">

        <div class="button-container button-footer">
            <div class="left-controls">
                <form asp-action="Index" method="get" class="filter-form">
                    <input type="hidden" name="TankId" value="@ViewBag.TankId" />
                    <input type="text" name="SearchString" class="search-input" placeholder="e.g Tuna" value="@CurrentSearchString" />
                    <input type="submit" value="Filter" class="btn btn-grey" />
                    <a asp-action="Index" asp-route-TankId="@TankId" class="btn btn-grey">Clear</a>
                </form>
            </div>
            <a asp-action="Create" asp-route-TankId="@(TankId!)" class="btn btn-blue btn-create"> Create New Fish </a>
        </div>

        <hr class="section-divider" />

        <table>
            <caption class="table-caption">All Fish</caption>
            <thead>
                <tr>
                    <th class="eight-digit-col">#</th>
                    <th>Name</th>
                    <th>Sub Species</th>
                    <th>Lifespan</th>
                    <th>Imported Date</th>
                    <th class="edit">Edit</th>
                    <th class="details">Details</th>
                    <th class="delete">Delete</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="8" class="text-center">No fish are found in the this tank</td>
                    </tr>
                }
                else
                {
                    @foreach (var fish in Model)
                    {
                        counter++;
                        <tr>
                            <td class="eight-digit-col">@counter</td>
                            <td>@fish.Name</td>
                            <td>@fish.SubSpecies</td>
                            <td>@fish.LifeSpan</td>
                            <td>@fish.ImportedDate.ToString("yyyy-MM-dd")</td>
                            <td class="edit">
                                <a asp-action="Edit" asp-route-id="@fish?.Id" asp-route-TankId="@TankId" class="btn btn-blue">Edit</a>
                            </td>
                            <td class="details">
                                <a asp-action="Details" asp-route-id="@fish?.Id" asp-route-TankId="@TankId" class="btn btn-blue">Details</a>
                            </td>
                            <td class="delete">
                                <a asp-action="Delete" asp-route-id="@fish?.Id" asp-route-TankId="@TankId" class="btn btn-red">Delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

    </div>
</div>
